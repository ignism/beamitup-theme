<section class="section relative">
    <div class="row">

        <div class="lg:px-5 w-full lg:w-6/12 lg:ml-1/12">
            {% set bg_image = theme.link ~ '/assets/Film_kader_roze.png' %}
            {% if content.frame_color == 'blue' %}
                {% set bg_image = theme.link ~ '/assets/Film_kader_blauw.png' %}
            {% endif %}
            
            <div class="w-full px-5 py-10 bg-{{ content.frame_color }}" style="background-image:url({{ bg_image }})">
                <div class="highlight-wrapper text-xl md:text-3xl lg:text-4xl mb-5" data-color="red" data-background="yellow">
                    Kijk de film!
                </div>

                {# MOVIE Placeholder #}
                <div class="w-full relative" style="padding-top: 75%">
                    <div class="absolute pin">
                        <iframe src="https://player.vimeo.com/video/{{ content.vimeo_id }}" width="100%" height="100%" frameborder="0" webkitallowfullscreen="webkitallowfullscreen" mozallowfullscreen="mozallowfullscreen" allowfullscreen="allowfullscreen"></iframe>
                    </div>

                </div>
                {# MOVIE Placeholder #}

            </div>

        </div>


    </div>
</section>