{% extends "base.twig" %}

{% block content %}

    <header class="relative">

        <div class="absolute pin-t pin-r z-10 w-3/12 lg:w-1/10" style="margin-top: 5%; margin-right: -1%;">
            {% include "components/planet.twig" with {
                image : "geel_blauwestip"
            } %}
        </div> 

        <div class="block-outer">
            <div class="block-inner landscape-triple mobile-square">
                {% set image = theme.link ~ '/assets/Balk_zwart_spikkels.png' %}
                <div class="text-2xl md:text-4xl lg:text-5xl content bg-grey flex flex-wrap flex-col justify-center" style="background-image: url({{ image }})">
                    <div class="zen-item cursor-pointer mb-2 w-full flex justify-center" data-target="workshops">
                        <div class="highlight-wrapper" data-color="yellow" data-background="green">Workshops</div>
                    </div>
                    <div class="zen-item cursor-pointer mb-2 w-full flex justify-center"data-target="educatieve-programmas">
                        <div class="highlight-wrapper" data-color="yellow" data-background="pink" >Educatieve programma's</div>
                    </div>
                    <div class="zen-item cursor-pointer mb-2 w-full flex justify-center" data-target="onderwijsondersteuning">
                        <div class="highlight-wrapper" data-color="yellow" data-background="brown">Onderwijsondersteuning</div>
                    </div>
                    <div class="zen-item cursor-pointer mb-2 w-full flex justify-center" data-target="software">
                        <div class="highlight-wrapper" data-color="yellow" data-background="blue">Software</div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section id="workshops" class="section pb-10 pt-20" style="margin-bottom: 0; margin-top: 0;">
        <div class="row">

            <div class="w-full lg:w-3/12 lg:ml-1/12 px-5 ">
                <div class="-mb-2 text-2xl md:text-3xl lg:text-4xl highlight-wrapper w-full" data-color="yellow" data-background="green">
                    Workshops
                </div>
            </div>
            <div class="hidden w-7/12 pr-5 lg:flex items-end justify-end">
                <ul class="list-reset xl:text-xl flex w-full items-end justify-between">
                    <li class="zen-item cursor-pointer font-medium" data-target="workshops"><span class="text-green border-green border-b-2">Workshops</span></li>
                    <li class="zen-item cursor-pointer font-medium" data-target="educatieve-programmas">Educatieve programma's</li>
                    <li class="zen-item cursor-pointer font-medium" data-target="onderwijsondersteuning">Onderwijsondersteuning</li>
                    <li class="zen-item cursor-pointer font-medium" data-target="software">Software</li>
                </ul>
            </div>

        </div>

        <div class="row">
            <div class="px-5 w-10/12 mx-1/12 lg:mt-10">
                <div class="row">

                    {% for project in projects %}
                        {% if project.category.slug == 'workshops' %}
                            
                            {% set color = 'green' %}
                            <div class="w-full lg:w-6/12 px-5 mt-10">
                                <a href="{{ project.link }}">
                                    {% include "components/block.twig" with {
                                        orientation: 'landscape-project',
                                        mobileOrientation: 'landscape-double',
                                        image: TimberImage(project.meta('header').image).src('large')
                                    } %}
                                    <div class="">
                                        <div class="font-medium text-xl xl:text-2xl mt-4 mb-1 text-{{ color }}">{{ project.meta("header").subtitle }}</div>
                                        <div class="font-medium text-xl xl:text-2xl">{{ project.title }}</div>
                                    </div>
                                </a>
                            </div>

                        {% endif %}
                    {% endfor %}

                </div>
            </div>
        </div>
    </section>

    <section id="educatieve-programmas" class="section pb-10 pt-20" style="margin-bottom: 0; margin-top: 0;">
        <div class="row">

            <div class="w-full lg:w-3/12 lg:ml-1/12 px-5 ">
                <div class="-mb-2 text-2xl md:text-3xl lg:text-4xl highlight-wrapper w-full" data-color="yellow" data-background="pink">
                    Educatieve<br>programma's
                </div>
            </div>
            <div class="hidden w-7/12 pr-5 lg:flex items-end justify-end">
                <ul class="list-reset xl:text-xl flex w-full items-end justify-between">
                    <li class="zen-item cursor-pointer font-medium" data-target="workshops">Workshops</li>
                    <li class="zen-item cursor-pointer font-medium" data-target="educatieve-programmas"><span class="text-purple border-purple border-b-2">Educatieve programma's</span></li>
                    <li class="zen-item cursor-pointer font-medium" data-target="onderwijsondersteuning">Onderwijsondersteuning</li>
                    <li class="zen-item cursor-pointer font-medium" data-target="software">Software</li>
                </ul>
            </div>

        </div>

        <div class="row">
            <div class="px-5 w-10/12 mx-1/12 lg:mt-10">
                <div class="row">
                    
                    {% for project in projects %}
                        {% if project.category.slug == 'educatieve-programmas' %}
                            
                            {% set color = 'purple' %}
                            <div class="w-full lg:w-6/12 px-5 mt-10">
                                <a href="{{ project.link }}">
                                    {% include "components/block.twig" with {
                                        orientation: 'landscape-double',
                                        mobileOrientation: 'landscape',
                                        image: TimberImage(project.meta('header').image).src('large')
                                    } %}
                                    <div class="">
                                        <div class="font-medium text-xl xl:text-2xl mt-4 mb-1 text-{{ color }}">{{ project.meta("header").subtitle }}</div>
                                        <div class="font-medium text-xl xl:text-2xl">{{ project.title }}</div>
                                    </div>
                                </a>
                            </div>

                        {% endif %}
                    {% endfor %}

                </div>
            </div>
        </div>
    </section>

    <section id="onderwijsondersteuning" class="section pb-10 pt-20" style="margin-bottom: 0; margin-top: 0;">
        <div class="row">

            <div class="w-full lg:w-3/12 lg:ml-1/12 px-5 ">
                <div class="-mb-2 text-2xl md:text-3xl lg:text-4xl highlight-wrapper w-full" data-color="yellow" data-background="brown">
                    Onderwijs-<br>ondersteuning
                </div>
            </div>
            <div class="hidden w-7/12 pr-5 lg:flex items-end justify-end">
                <ul class="list-reset xl:text-xl flex w-full items-end justify-between">
                    <li class="zen-item cursor-pointer font-medium" data-target="workshops">Workshops</li>
                    <li class="zen-item cursor-pointer font-medium" data-target="educatieve-programmas">Educatieve programma's</li>
                    <li class="zen-item cursor-pointer font-medium" data-target="onderwijsondersteuning"><span class="text-brown border-brown border-b-2">Onderwijsondersteuning</span></li>
                    <li class="zen-item cursor-pointer font-medium" data-target="software">Software</li>
                </ul>
            </div>

        </div>

        <div class="row">
            <div class="px-5 w-10/12 mx-1/12 lg:mt-10">
                <div class="row">
                    
                    {% for project in projects %}
                        {% if project.category.slug == 'onderwijsondersteuning' %}
                            
                            {% set color = 'brown' %}
                            <div class="w-full lg:w-6/12 px-5 mt-10">
                                <a href="{{ project.link }}">
                                    {% include "components/block.twig" with {
                                        orientation: 'landscape-double',
                                        mobileOrientation: 'landscape',
                                        image: TimberImage(project.meta('header').image).src('large')
                                    } %}
                                    <div class="">
                                        <div class="font-medium text-xl xl:text-2xl mt-4 mb-1 text-{{ color }}">{{ project.meta("header").subtitle }}</div>
                                        <div class="font-medium text-xl xl:text-2xl">{{ project.title }}</div>
                                    </div>
                                </a>
                            </div>

                        {% endif %}
                    {% endfor %}

                </div>
            </div>
        </div>
    </section>

    <section id="software" class="section pb-10 pt-20" style="margin-bottom: 0; margin-top: 0;">
        <div class="row">

            <div class="w-full lg:w-3/12 lg:ml-1/12 px-5 ">
                <div class="-mb-2 text-2xl md:text-3xl lg:text-4xl highlight-wrapper w-full" data-color="yellow" data-background="blue">
                    Software
                </div>
            </div>
            <div class="hidden w-7/12 pr-5 lg:flex items-end justify-end">
                <ul class="list-reset xl:text-xl flex w-full items-end justify-between">
                    <li class="zen-item cursor-pointer font-medium" data-target="workshops">Workshops</li>
                    <li class="zen-item cursor-pointer font-medium" data-target="educatieve-programmas">Educatieve programma's</li>
                    <li class="zen-item cursor-pointer font-medium" data-target="onderwijsondersteuning">Onderwijsondersteuning</li>
                    <li class="zen-item cursor-pointer font-medium" data-target="software"><span class="text-blue border-blue border-b-2">Software</span></li>
                </ul>
            </div>

        </div>

        <div class="row">
            <div class="px-5 w-10/12 mx-1/12 lg:mt-10">
                <div class="row">
                    
                    {% for project in projects %}
                        {% if project.category.slug == 'software' %}
                            
                            {% set color = 'blue' %}
                            <div class="w-full lg:w-6/12 px-5 mt-10">
                                <a href="{{ project.link }}">
                                    {% include "components/block.twig" with {
                                        orientation: 'landscape-double',
                                        mobileOrientation: 'landscape',
                                        image: TimberImage(project.meta('header').image).src('large')
                                    } %}
                                    <div class="">
                                        <div class="font-medium text-xl xl:text-2xl mt-4 mb-1 text-{{ color }}">{{ project.meta("header").subtitle }}</div>
                                        <div class="font-medium text-xl xl:text-2xl">{{ project.title }}</div>
                                    </div>
                                </a>
                            </div>

                        {% endif %}
                    {% endfor %}

                </div>
            </div>
        </div>
    </section>

    <section class="section relative">
        <div class="row text-xl">
            <div class="px-5 lg:ml-1/12 w-full lg:w-10/12">

                <div class="block-outer">
                    <div class="block-inner landscape-footer mobile-landscape">
                        <div class="content bg-pink flex items-center justify-center" style="background-image: url({{ theme.link }}/assets/Balk_contact_roze.png)">
                        
                            <div class="text-red font-bold flex flex-col items-start justify-center">
                                <p class="text-2xl md:text-4xl xl:text-5xl">
                                    {% include "components/highlight.twig" with {
                                        text : page.meta("footer"),
                                        color: "red",
                                        background: "yellow"
                                    } %}
                                </p>
                                <p class="hover-up text-2xl md:text-4xl xl:text-5xl">
                                    <a class="text-red" href="mailto:hallo@beamitup.nl">
                                        {% include "components/highlight.twig" with {
                                            text : "hallo@beamitup.nl",
                                            color: "red",
                                            background: "yellow"
                                        } %}
                                    </a>
                                </p>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="w-3/12 lg:w-2/12 absolute pin-b pin-r z-50" style="margin-right:4%; margin-bottom: -15% ">
            {% include "components/planet.twig" with {
                image : "blauw_roze_streep"
            } %}
        </div>
    </section>

{% endblock %}
