{% if menu %}
    <ul class="list-reset pt-32 pl-10 w-full h-full flex flex-wrap flex-col justify-start">
        {% for item in menu %}
            <li class="w-full py-4 text-4xl md:text-6xl text-left font-bold {{ item.classes | join(' ') }}">
                {% if item.title == "contact" %}
                    {# <span class="mobile-contact-button text-white zen-item cursor-pointer" data-target="footer">{{ item.title }}</span> #}
                    <a class="mobile-contact-button text-white" target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
                {% else %}
                    <a class="text-white" target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endif %}
