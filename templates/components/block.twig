<div class="block-outer">
    {% if not mobileOrientation %}
        {% set mobileOrientation = orientation %}
    {% endif %}

    <div class="block-inner {{ orientation }} mobile-{{ mobileOrientation }}">
        <div class="content {% if color != '' %}bg-{{ color }}{% endif %} flex items-center justify-center" style="background-image: url({{ image }}); background-size: {{ bg_size }}">
            <p class="text-2xl">{{ text }}</p>
        </div>
    </div>
</div>